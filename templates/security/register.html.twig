{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container bootstrap snippets bootdey">
    <div class="header">
        <ul class="nav nav-pills pull-right">
            <li><a href="#">&nbsp;</a></li>
        </ul>
        <h3 class="text-muted prj-name">RealTime Chat Application</h3>
    </div>

    <div style="height:auto;min-height:400px;" class="jumbotron">
        <div class="col-md-4">
            <img class="img-responsive center-block img-user" src="https://img.icons8.com/wired/64/000000/speech-bubble-with-dots.png">
        </div>
        <div class="col-md-6 form-content">

    {{ form_start(registrationForm, {attr: {class: "form-signin"}}) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

    {{ form_row(registrationForm.register) }}
    {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>


    <div class="col-md-12">
        <div class="container bootstrap snippets bootdey">
            <footer class="footer">
                <p>&copy; Christopher Sabaoth [Wren Kitchens] </p>
            </footer>
        </div>
    </div>

    {% endblock %}